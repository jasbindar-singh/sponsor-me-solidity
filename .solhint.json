{
  "extends": ["solhint:recommended"],
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": false,
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": ["error", "^0.8.0"],
    "reason-string": ["warn", { "maxLength": 64 }],
    "no-empty-blocks": "off"
  },
  "plugins": ["prettier"]
}
